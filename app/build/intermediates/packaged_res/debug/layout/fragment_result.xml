<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_result_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_gravity="start|center"
                android:layout_marginStart="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            app:layout_constraintTop_toBottomOf="@id/layout"
            android:layout_marginTop="16dp"
            android:text="Thông tin cá nhân"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <FrameLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Dinh Huy"
                android:textSize="17sp"
                android:textColor="#818181"
                android:layout_gravity="center|end"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:background="#E8E8E8"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            android:layout_marginHorizontal="22dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14/07/2001"
                android:textSize="17sp"
                android:textColor="#818181"
                android:layout_gravity="center|end"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:background="#E8E8E8"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="42sp"
            app:layout_constraintTop_toBottomOf="@id/layout2"
            android:layout_marginHorizontal="22dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="17sp"
                android:textColor="#818181"
                android:layout_gravity="center|end"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:background="#E8E8E8"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#E8E8E8"/>
        </FrameLayout>
        <TextView
            android:text="Đóng"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="22dp"
            android:layout_marginBottom="23dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
         